<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark">

    <Button
        android:text="Reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordclass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:id="@+id/enterpassword"
        android:hint="Reset Password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textinfo"
        android:textSize="24sp"
        android:layout_below="@+id/enterpassword"
        android:layout_alignLeft="@+id/passwordclass"
        android:layout_alignStart="@+id/passwordclass"
        android:layout_alignRight="@+id/passwordclass"
        android:layout_alignEnd="@+id/passwordclass" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/passwordclass"
        android:hint="Enter email"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
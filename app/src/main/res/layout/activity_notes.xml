<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_notes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.anjanbharadwaj.agendaplusapp.Notes"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#000000">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textColor="#ffffffff"
            android:textSize="30dp"
            android:layout_alignParentLeft="true"/>


        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="#f4f142"
            android:onClick="save"
            android:id="@+id/save"
            android:layout_alignParentRight="true"/>

        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="Add"
            android:background="#0a990f"
            android:onClick="add"
            android:id="@+id/add"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/save"
            android:layout_toStartOf="@+id/save" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="notes"
            android:id="@+id/titleView"
            android:textColor="#ffffff"
            />
        <Spinner
            android:id="@+id/spinner"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            android:layout_toRightOf="@id/titleView"
            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#c529d1"
            android:text="Share "
            android:id="@+id/share"
            android:onClick="saveTitle"
            android:layout_alignParentRight="true"/>




    </RelativeLayout>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usernotes"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:background="#ffffffff"
        android:gravity="top|left">
    </EditText>


</LinearLayout>


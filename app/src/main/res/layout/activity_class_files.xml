<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    android:weightSum="1"
    android:background="#7289ad">
    tools:context="com.example.anjanbharadwaj.agendaplusapp.ClassFilesActivity"


    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


</LinearLayout>


    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="30sp"
        android:textAlignment="center" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="245dp"
        android:id="@+id/listofhw"
        android:background="#42f4e8" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <Button
            android:text="PIN/Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pinpass" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pinandpass"
            android:textSize="18sp"
            android:layout_weight="1"
            android:textAlignment="center" />
    </LinearLayout>


</LinearLayout>




<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
    android:weightSum="1"
    android:background="#7289ad">
    tools:context="com.example.anjanbharadwaj.agendaplusapp.ClassFilesActivity"

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="30sp"
        android:textAlignment="center" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:id="@+id/listofhw"
        android:background="#42f4e8" />



        <Button
            android:text="PIN/Password"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pinpass" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/pinandpass"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_weight="0.16" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="266dp"
            android:id="@+id/yournotes"
            android:background="@color/wallet_dim_foreground_disabled_holo_dark" />
        <Button
            android:text="Add Notes to this class"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addthenote" />
        <Button
            android:text="Open Chat"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/openchat" />

    </LinearLayout>
    </ScrollView>

</LinearLayout>



